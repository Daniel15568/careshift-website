<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Shifts I Assigned - CareShiftAI</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <header>
    <h1>Shifts I Assigned</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/dashboard">Dashboard</a>
      <a href="/assign-shift">Assign new shift</a>
      <a href="/logout">Logout</a>
    </nav>
  </header>

    <main>
    <section>
      <h2>Hello, <%= user.name %> (Manager)</h2>
      <p>This page shows all shifts you have assigned to your workers.</p>
    </section>

    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <section class="form-card">
      <h3>Filter shifts</h3>
      <form method="GET" action="/manager-shifts" class="filters-form">
        <label>
          From date
          <input type="date" name="date_from" value="<%= filterFrom || '' %>" />
        </label>

        <label>
          To date
          <input type="date" name="date_to" value="<%= filterTo || '' %>" />
        </label>

        <label>
          Status
          <select name="status">
            <option value="">All</option>
            <option value="assigned" <%= filterStatus === 'assigned' ? 'selected' : '' %>>Assigned</option>
            <option value="completed" <%= filterStatus === 'completed' ? 'selected' : '' %>>Completed</option>
            <option value="cancelled" <%= filterStatus === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
          </select>
        </label>

        <button type="submit" class="button secondary">Apply filters</button>
        <a href="/manager-shifts" class="button secondary small-button">Clear</a>
      </form>
    </section>

    <section>
      <% if (shifts.length === 0) { %>

        <p>You havenâ€™t assigned any shifts yet.</p>
      <% } else { %>
        <table>
          <thead>
                       <tr>
              <th>Date</th>
              <th>Start</th>
              <th>End</th>
              <th>Worker</th>
              <th>Location</th>
              <th>Role</th>
              <th>Notes</th>
              <th>Status</th>
            </tr>
          </thead>
                              <tbody>
            <% shifts.forEach(s => { %>
              <tr>
                <td><%= s.date %></td>
                <td><%= s.start_time %></td>
                <td><%= s.end_time %></td>
                <td>
                  <%= s.worker_name %> (<%= s.worker_role %>)<br />
                  <small><%= s.worker_email %></small>
                </td>
                <td><%= s.location || '-' %></td>
                <td><%= s.role || '-' %></td>
                <td><%= s.notes || '-' %></td>
                <td>
                  <span class="status-pill status-<%= s.status %>">
                    <%= s.status %>
                  </span>

                  <% if (s.status !== 'cancelled') { %>
                    <form method="POST" action="/manager-shifts/cancel" class="inline-form">
                      <input type="hidden" name="shift_id" value="<%= s.id %>" />
                      <button type="submit" class="danger-button small-button">Cancel</button>
                    </form>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </section>
  </main>

  <footer>
    <p>&copy; <%= new Date().getFullYear() %> CareShiftAI</p>
  </footer>
</body>
</html>
